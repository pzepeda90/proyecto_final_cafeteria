# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cafeteria_l_bandito
DB_USER=patriciozepeda
DB_PASS=123456

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
PORT=3000
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================
# Genera una clave secreta fuerte para JWT
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=cafeteria_jwt_secret_key_very_secure_2024_bandito_development

# =====================================================
# CONFIGURACIÓN DE CORS
# =====================================================
# URL del frontend para permitir CORS
